# @param {Integer[]} arr
# @param {Integer} k
# @param {Integer} x
# @return {Integer[]}
def find_closest_elements(arr, k, x)

    output = []

    left = 0
    right = arr.length - k
    while left < right
        mid = (left + right) / 2
        if (x - arr[mid]) > (arr[mid + k] - x)
            left = mid + 1
        else
            right = mid
        end
        mid = 0
    end

    for i in left..left+k-1
        output << arr[i]
    end

    return output
end


